#:kivy 2.2.1
BoxLayout:
    GridLayout:
        rows: 3
        GridLayout:
            cols: 3
            size_hint_y: None
            height: self.minimum_height
            TextInput:
                id: filterTextInput
                markup: True
                font_size: '10pt'
                size_hint: (.2, None)
                height: 30
            Button:
                id: add_button
                text:('Add')
                size_hint: (None, None)
                height: 30
                width: 40
            Button:
                id: search_button
                text:('Search')
                size_hint: (None, None)
                height: 30
                width: 60
        TextInput:
            id: filters
            markup: True
            size_hint_y: None
            height: self.minimum_height
            font_size: '10pt'
        ScrollView:
            id: text_scroll
            size_hint: (1, 1)
            TextInput:
                id: fileText
                size_hint: (1.1, 1.1)
                height: self.minimum_height
                width: 800
                do_scroll_x: True
                do_scroll_y: True
                markup: True
                multiline: False
                font_size: '10pt'
